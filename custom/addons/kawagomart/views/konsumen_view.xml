<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <!-- res.partner inherit tree view -->
  <record id="res_partner_view_tree_inherit" model="ir.ui.view">
    <field name="name">res.partner.inherit.view.tree</field>
    <field name="model">res.partner</field>
    <field name="mode">extension</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <!-- Add your xpath here -->
      <xpath expr="//field[@name='vat']" position="after">
        <field name="poin"/>
        <field name="level"/>
      </xpath>
    </field>
  </record>
  <!-- res.partner inherit form view -->
  <record id="res_partner_konsumen_view_form_inherit" model="ir.ui.view">
    <field name="name">res.partner.inherit.view.form</field>
    <field name="model">res.partner</field>
    <field name="mode">extension</field>
    <field name="inherit_id" ref="base.view_partner_tree"/>
    <field name="arch" type="xml">
      <!-- Add your xpath here -->
      <xpath expr="//field[@name='vat']" position="after">
        <field name="poin"/>
        <field name="level" />
      </xpath>
    </field>
  </record>
  <!-- res.partner action window -->
  <record id="res_partner_konsumen_action" model="ir.actions.act_window">
    <field name="name">Konsumen</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">tree,form,kanban</field>
  </record>
  <!-- This Menu Item must have a parent and an action -->
  <menuitem id="konsumen_view_menu_act" name="Konsumen" parent="kawagomart_menu_root" action="res_partner_konsumen_action" sequence="30"/>
</odoo>